{
  "name": "@kv-orm/core",
  "version": "0.1.0",
  "description": "A Node.js ORM for key-value datastores",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "clean": "rm -rf dist/",
    "clean:node": "rm -rf package-lock.json node_modules/",
    "build": "tsc",
    "lint": "prettier -c 'src/' 'README.md'",
    "lint:fix": "prettier --write 'src/' 'README.md'"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kv-orm/core.git"
  },
  "keywords": [
    "kv",
    "key-value",
    "orm",
    "model",
    "nodejs",
    "javascript"
  ],
  "author": {
    "name": "Greg Brimble",
    "email": "developer@gregbrimble.com",
    "url": "https://gregbrimble.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kv-orm/core/issues"
  },
  "homepage": "https://github.com/kv-orm/core#readme",
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@types/jest": "25.2.1",
    "babel-jest": "25.3.0",
    "codecov": "3.6.5",
    "husky": "^4.2.5",
    "jest": "25.3.0",
    "prettier": "2.0.4",
    "ts-jest": "25.3.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "reflect-metadata": "0.1.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint || (npm run lint:fix && npm run lint)",
      "pre-push": "npm test"
    }
  }
}
